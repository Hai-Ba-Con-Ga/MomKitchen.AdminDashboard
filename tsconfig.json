{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,
    "types": ["cypress"],
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    // TODO : temp turn off
    "noImplicitAny": false,
    "strict": false,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@ui/*": ["./src/base/components/*"],
      "@/*": ["./src/*"],
      "@base" : ["./src/base/*"]
    }
  },
  "include": ["src", "*.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
